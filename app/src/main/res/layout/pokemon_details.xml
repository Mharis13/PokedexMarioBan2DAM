<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/retroDarkGreen"
    android:backgroundTint="@color/retroDarkGreen">

    <TextView
        android:id="@+id/PokemonPokedexId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/pokemon_pokedex_id"
        android:textColor="@color/retroLightGreen"
        app:layout_constraintStart_toEndOf="@id/PokemonSprite"
        tools:layout_editor_absoluteY="111dp" />

    <ImageView
        android:id="@+id/PokemonSprite"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="111dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/PokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/pokemon_name_id"
        android:textColor="@color/retroLightGreen"
        app:layout_constraintStart_toEndOf="@+id/PokemonSprite"
        android:fontFamily="@font/press_start_2p"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/PokemonWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/pokemon_weight_id"
        android:textColor="@color/retroLightGreen"
        app:layout_constraintStart_toEndOf="@+id/PokemonSprite"
        android:fontFamily="@font/press_start_2p"
        tools:layout_editor_absoluteY="193dp" />

    <ImageButton
        android:id="@+id/shinyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/retroDarkRed"
        android:tint="@color/retroGray"
        android:text="@string/shiny_button_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/PokemonType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/pokemon_types_id"
        android:textColor="@color/retroLightGreen"
        app:layout_constraintStart_toEndOf="@+id/PokemonSprite"
        android:fontFamily="@font/press_start_2p"
        tools:layout_editor_absoluteY="165dp" />

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/retroDarkRed"
        android:text="@string/return_button_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
        app:tint="@color/retroGray" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/pokemon_hp_id"
        android:textColor="@color/retroLightGreen"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/press_start_2p"
        app:layout_constraintTop_toBottomOf="@+id/PokemonSprite" />

</androidx.constraintlayout.widget.ConstraintLayout>
