<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/PokemonPokedexId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Pokedex Number"
        app:layout_constraintStart_toEndOf="@id/PokemonSprite"
        tools:layout_editor_absoluteY="111dp" />

    <ImageView
        android:id="@+id/PokemonSprite"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="111dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/PokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Pokemon Name"
        app:layout_constraintStart_toEndOf="@+id/PokemonSprite"
        tools:layout_editor_absoluteY="138dp" />

    <TextView
        android:id="@+id/PokemonWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Pokemon Weight"
        app:layout_constraintStart_toEndOf="@+id/PokemonSprite"
        tools:layout_editor_absoluteY="193dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="21dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/PokemonSprite"
        tools:layout_editor_absoluteX="16dp"
        tools:srcCompat="@drawable/baseline_male_24" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="21dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/PokemonSprite"
        tools:layout_editor_absoluteX="48dp"
        tools:srcCompat="@drawable/baseline_female_24" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="21dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/PokemonSprite"
        tools:layout_editor_absoluteX="86dp"
        tools:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/PokemonType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Pokemon Type"
        app:layout_constraintStart_toEndOf="@+id/PokemonSprite"
        tools:layout_editor_absoluteY="165dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

</androidx.constraintlayout.widget.ConstraintLayout>